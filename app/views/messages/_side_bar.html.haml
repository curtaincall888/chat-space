.side-bar
  .side-bar__header
    .side-bar__header__user
      %h3.side-bar__header__user__name
        = current_user.name
      %ul.side-bar__header__user__icon
        %li
          = link_to new_group_path(current_user), class: "side-bar__header__user__icon--edit" do
            = icon('far','edit')
        %li
          = link_to edit_user_path(current_user), class: "side-bar__header__user__icon--setting" do
            = icon('fas','cog')
  .side-bar__groups
    - current_user.groups.each do |group|
      .side-bar__groups__list
        = link_to group_messages_path(group) do
          .side-bar__groups__list__name
            = group.name
          .side-bar__groups__list__message
            = group.show_last_message

